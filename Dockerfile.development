FROM ruby:2.3.6-alpine

#Install dependencies
RUN gem install bundler
RUN apk add --update \
  build-base \
  libxml2-dev \
  libxslt-dev \
  && rm -rf /var/cache/apk/*
# Use libxml2, libxslt a packages from alpine for building nokogiri
RUN bundle config build.nokogiri --use-system-libraries

COPY . /app/src/
WORKDIR /app/src